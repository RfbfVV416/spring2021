<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-util-3.2.xsd">


    <bean class="albe.StationOne" id="1" name="AutoRadio">
        <constructor-arg ref="creator"/>
    </bean>
    <bean class="albe.StationTwo" id="2" name="KidRadio">
        <constructor-arg ref="creator"/>
    </bean>
    <bean class="albe.ListCreator" id="creator" factory-method="getList"/>

</beans>